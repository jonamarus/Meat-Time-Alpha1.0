<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:colorPrimary">@color/blue</item>
        <item name="android:windowTitleStyle">@style/dialog_fragment_style</item>
        <item name="android:navigationBarColor">@color/blue</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:colorAccent">@color/blue</item>
    </style>

    <style name="cust_dialog" parent="android:Theme.Material.Light.Dialog">
        <item name="android:windowTitleStyle">@style/dialog_fragment_style</item>
        <item name="android:colorPrimary">@color/blue</item>
        <item name="android:navigationBarColor">@color/blue</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:colorAccent">@color/blue</item>
    </style>

    <style name="dialog_fragment_style">
        <item name="android:background">@color/blue</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
